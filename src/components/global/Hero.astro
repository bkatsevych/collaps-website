---
import { Image } from 'astro:assets';

const { title, image, alt, className = "" } = Astro.props;
---

<section class="bg-white">
  <div class="max-w-4xl mx-auto px-8 p-12">
    <div class="py-8">
      <h1 class="text-blue-950 font-display text-4xl lg:text-5xl font-bold">
        {title}
      </h1>
    </div>
    <Image src={image} alt={alt} class={`${className} w-full h-auto`} />
  </div>
</section>


